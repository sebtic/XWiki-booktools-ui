    <property>
      <code>{{velocity}}
$xwiki.jsx.use("BookTools.Code.BookNavigationMacro")
$xwiki.ssx.use("BookTools.Code.BookNavigationMacro")
{{html wiki=true}}
#set($node = $services.booktools.documentWalker.getNode($doc.documentReference))
#set($previous = $node.previous)
#set($next = $node.next)
#set($up = $node.parent)
#set($firstpage = $node.rootNode)
#set($hidefirstpagelink = $xcontext.macro.params.hidefirstpagelink)
#if($firstpage.index)
&lt;div class="panel book-navigation"&gt;
    #if($previous)
      &lt;span class="book-navigation-local-prev"&gt;
      &lt;a href="$!escapetool.xml($viewChildUrl)" 
        [[$services.icon.render("arrow_left")&gt;&gt;$previous.documentReference||title="$services.localization.render('booktools.navigation.previous')"]]
      &lt;/span&gt;
    #end
    #if($up &amp;&amp; !$node.index)
      &lt;span class="book-navigation-local-up"&gt;
               [[$services.icon.render("arrow_up")&gt;&gt;$up.documentReference||title="$services.localization.render('booktools.navigation.up')"]]
      &lt;/span&gt;
    #end
    #if($hidefirstpagelink != "true" &amp;&amp; !$node.index )
      &lt;span class="book-navigation-firstpage"&gt;
        #if($firstpage)
          [[$services.icon.render("house")&gt;&gt;$firstpage.documentReference||title="$services.localization.render('booktools.navigation.firstpage')"]]
        #end
      &lt;/span&gt; 
    #end
    #if($next)
      &lt;span class="book-navigation-local-next"&gt;
       [[$services.icon.render("arrow_right")&gt;&gt;$next.documentReference||title="$services.localization.render('booktools.navigation.next')"]]
      &lt;/span&gt;
    #end
&lt;/div&gt;
#end
{{/html}}
{{/velocity}}</code>
