{{html wiki=true}} 
#set($docextras=[])
### setting right mode for the sheet 
### setting $curdoc variable either already set or set to $doc
#if(!$mode)
  #if($xcontext.action=="inline" || $xcontext.action=="edit")
    #set($mode = "edit")
  #else
    #set($mode = "view")
  #end
#end
#if(!$curdoc)
  #set($curdoc = $doc)
#end

$xwiki.jsx.use("BookTools.Code.ConfigurationSheet")
$xwiki.ssx.use("BookTools.Code.ConfigurationSheet")
$xwiki.ssfx.use('uicomponents/widgets/fullScreen.css', true)
#set($xobject = $curdoc.getObject('BookTools.Code.ConfigurationClass'))
#set($xclass = $xobject.xWikiClass)
$curdoc.use("BookTools.Code.ConfigurationClass")

#set($wikiDescriptorManager = $services.component.getInstance("org.xwiki.wiki.descriptor.WikiDescriptorManager"))

#macro(showvalidationmessage $message)
  #if($xcontext.validationStatus.errors.contains($message))
    {{error}}$services.localization.render($message){{/error}}
  #end
#end ## end showvalidationmessage

#macro(showfield $fieldname)
  #if( $mode == "edit")
    (% fieldname="$fieldname" %) (((
      &lt;label for="BookTools.Code.ConfigurationClass_0_$fieldname"
        data-toggle='tooltip' 
        title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt;
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt; :
      &lt;/label&gt;
      $curdoc.display($fieldname, $mode)
     #showvalidationmessage("booktools.configuration.val_$fieldname")
    )))
  #else
    #set($value = $xobject.getProperty($fieldname).value)
    #if ($stringtool.isNotBlank($value.trim()))
      (((
        &lt;span data-toggle='tooltip' 
          title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt; 
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt;
        &lt;/span&gt; : $curdoc.display($fieldname, $mode)
      )))
    #end
  #end
#end ## end showfield macro

#macro(showmultiselectfield $fieldname $values)
  #if( $mode == "edit")
    (% fieldname="$fieldname" %) (((
      &lt;label for="BookTools.Code.ConfigurationClass_0_$fieldname"
        data-toggle='tooltip' 
        title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt;
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt; :
      &lt;/label&gt;
      &lt;br&gt;
      $curdoc.display($fieldname, $mode)
     #showvalidationmessage("booktools.configuration.val_$fieldname")
    )))
  #else
    #set($value = $xobject.getProperty($fieldname).value)
    #if (!$value.isEmpty())
      (((
        &lt;span data-toggle='tooltip' 
          title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt; 
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt;
        &lt;/span&gt; : $curdoc.display($fieldname, $mode)
      )))
    #end
  #end
#end ## end showmultiselectfield macro

#macro(showtextareafield $fieldname)
  #if( $mode == "edit")
    (% fieldname="$fieldname" %) (((
      &lt;label for="BookTools.Code.ConfigurationClass_0_$fieldname"
        data-toggle='tooltip' 
        title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt;
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt; :
      &lt;/label&gt;
      &lt;br&gt;
      $curdoc.display($fieldname, $mode)
     #showvalidationmessage("booktools.configuration.val_$fieldname")
    )))
  #else
    #set($value = $xobject.getProperty($fieldname).value)
    #if ($stringtool.isNotBlank($value.trim()))
      (((
        &lt;span data-toggle='tooltip' 
          title='$services.localization.render("booktools.configuration.tooltip_$fieldname")'&gt; 
          $services.localization.render("booktools.configuration.label_$fieldname")
          &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt;
        &lt;/span&gt; : 
        &lt;textarea name="content" id="content" rows="5" cols="80"&gt;
        $escapetool.xml($value)
        &lt;/textarea&gt;
      )))
    #end
  #end
#end ## end showmultiselectfield macro

#showfield("scope")
#set($wikis = [])
#foreach($wiki in $wikiDescriptorManager.allIds)
  #if($wiki != $xcontext.database)
    #set($discard = $wikis.add($wiki))
  #end
#end
#showmultiselectfield("extraSources", $wikis)
#showmultiselectfield("attachmentTranslations", $xclass.get("attachmentTranslations").getListValues())
#showtextareafield("style")
#showtextareafield("entryStyle")

