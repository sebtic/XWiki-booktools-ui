{{html wiki=true }}
#set($docextras=[])

$xwiki.jsx.use("BookTools.Code.MergePersons")
$xwiki.ssx.use("BookTools.Code.MergePersons")

#macro(showfield $fieldname $selected $values)
(% fieldname="$fieldname" %) (((
  &lt;label for="BookTools.Code.ConfigurationClass_0_$fieldname"
         data-toggle='tooltip' 
         title='$services.localization.render("booktools.mergepersons.tooltip_$fieldname")'&gt;
    $services.localization.render("booktools.mergepersons.label_$fieldname")
    &lt;span class="tooltip-mark"&gt;$services.icon.render('question','Silk')&lt;/span&gt; :
  &lt;/label&gt;
  &lt;br&gt;
  &lt;select id="BookTools.Code.MergePersons_$fieldname" name="BookTools_Code_MergePersons_$fieldname" size=1 style="width:100%" class="bibliography-select"&gt;
      #foreach($value in $values)
        #set($personDoc = $xwiki.getDocument($value))
        #set($xobject = $personDoc.getObject('BookTools.Code.PersonClass'))
          &lt;option label="$escapetool.xml($xobject.getProperty("renderedGivenFirst").value)" value="$value"#if($selected == $value) selected="selected" #end&gt;$escapetool.xml($xobject.getProperty("renderedGivenFirst").value)&lt;/option&gt;
        #end
      &lt;/select&gt;
    )))
#end



#if ($isGuest)
  #set($login = ${$doc.getURL("login", "xredirect=$doc.externalURL")})
  #set($register = ${$xwiki.getURL($services.model.resolveDocument('', 'default'), "register", "xredirect=$doc.externalURL")})
  $services.localization.render('booktools.mergepersons.need', [$login,$register])
#else
  #if($request.merge == 'true' &amp;&amp; 
      $stringtool.isNotBlank($request.BookTools_Code_MergePersons_source) &amp;&amp; 
      $stringtool.isNotBlank($request.BookTools_Code_MergePersons_destination) &amp;&amp; 
      $request.BookTools_Code_MergePersons_source != $request.BookTools_Code_MergePersons_destination)
    #if($services.booktools.mergePersons($request.BookTools_Code_MergePersons_source.trim(), $request.BookTools_Code_MergePersons_destination.trim())) 
       #set($sourceDoc = $xwiki.getDocument($request.BookTools_Code_MergePersons_source))
       #set($sourceObj = $sourceDoc.getObject('BookTools.Code.PersonClass'))
       #set($sourceTitle = $escapetool.xml($sourceObj.getProperty('renderedGivenFirst').value))
       #set($destinationDoc = $xwiki.getDocument($$request.BookTools_Code_MergePersons_destination))
       #set($destinationObj = $destinationDoc.getObject('BookTools.Code.PersonClass'))
       #set($destinationTitle = $escapetool.xml($destinationObj.getProperty('renderedGivenFirst').value))
       #set($params = [ "[[$sourceTitle&gt;&gt;$sourceDoc.documentReference]]", "[[$destinationTitle&gt;&gt;$destinationDoc.documentReference]]" ])
       $services.localization.render('booktools.mergepersons.mergedone', $$params )
    #else
      (% class="error" %) ((($services.localization.render('booktools.mergepersons.mergeerror'))))
    #end
  #else
      &lt;form method="get" action="$doc.getURL()"&gt;
        &lt;input type="hidden" name="merge" value="true" /&gt;
        
        #set($query = $services.query.xwql("from doc.object(BookTools.Code.PersonClass) as person order by person.renderedFamilyFirst asc"))
        #set($results = $query.execute())
        
        #showfield("source" $request.BookTools_Code_MergePersons_source $results)
        #showfield("destination" $request.BookTools_Code_MergePersons_destination $results)
        
        (((
        &lt;input class="btn btn-success" type="submit" value="$services.localization.render('booktools.mergepersons.submit')" /&gt;
        )))
      &lt;/form&gt;

  #end
#end
{{/html}}
{{/velocity}}</content>
